.row
    .col-lg-12
        .portlet.box.portlet-orange
            .portlet-header
                .caption Media Gallery
                .tools
                    i.fa.fa-chevron-up
                    i.fa.fa-cog(data-toggle="modal", data-target="#modal-config")
                    i.fa.fa-refresh
                    i.fa.fa-times
            .portlet-body
                .gallery-pages
                    ul.list-filter.list-unstyled(style="float: left;")
                        li.filter.active(data-filter='all') All
                        li.filter(data-filter='.development') Development
                        li.filter(data-filter='.design') Design
                        li.filter(data-filter='.photography') Photography
                        li.filter(data-filter='.wordpress') Wordpress
                        li.filter(data-filter='.html') Html
                    .action-group.btn-group.pull-right.mtm.mbm
                        button.btn.btn-primary 
                            i.fa.fa-check-square-o.mrs
                            | Check All
                        button.btn.btn-primary 
                            i.fa.fa-upload.mrs
                            | Add new
                        button.btn.btn-primary 
                            i.fa.fa-edit.mrs
                            | Edit 
                        button.btn.btn-primary 
                            i.fa.fa-trash-o.mrs
                            | Delete
                        button.btn.btn-primary.dropdown-toogle(type="button" data-toogle="dropdown")
                            i.fa.fa-share-square-o.mrs
                            | Share
